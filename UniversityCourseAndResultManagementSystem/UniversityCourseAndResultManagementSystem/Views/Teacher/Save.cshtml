
@{
    ViewBag.Title = "Save Teacher";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<div>
    <hr />
    <h2 style="font-size: 30px; color: #5f223b; ">Save Teacher</h2>
    <hr />
    @if (ViewBag.Message != null)
    {
        <p style="font-size:20px;color:olivedrab">@ViewBag.Message</p>

    }
    <form id="saveTeacherForm" method="POST">

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name">
            @Html.ValidationMessage("Name")
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <textarea type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address"></textarea>
            @Html.ValidationMessage("Address")
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="form-control" id="Email" name="Email" placeholder="Enter Email">
            @Html.ValidationMessage("Email")
        </div>
        <div class="form-group">
            <label for="Contact">Contact No.</label>
            <input class="form-control" id="Contact" name="Contact" placeholder="Enter Contact">
            @Html.ValidationMessage("Contact")
        </div>
        <div class="form-group">
            <label for="DesignationId">Designation</label>
            <select id="DesignationId" name="DesignationId">
                <option value="">Select Designation....</option>
                @foreach (var designation in ViewBag.Designations)
                {
                    <option value="@designation.Id">@designation.Title</option>
                }
            </select>
            @Html.ValidationMessage("DesignationId")
        </div>
        <div class="form-group">
            <label for="DepartmentId">Department</label>
            <select id="DepartmentId" name="DepartmentId">
                <option value="">Select Department....</option>
                @foreach (var dept in ViewBag.Departments)
                {
                    <option value="@dept.DepartmentId">@dept.Name</option>
                }
            </select>
            @Html.ValidationMessage("DepartmentId")
        </div>
        <div class="form-group">
            <label for="CreditTobeTaken">Credit To be Taken</label>
            <input class="form-control" id="CreditTobeTaken" name="CreditTobeTaken" placeholder="Enter CreditTobeTaken">
            @Html.ValidationMessage("CreditTobeTaken")
        </div>
        <button type="submit" class="btn btn-outline-primary">Save</button>

    </form>
  
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#saveTeacherForm").validate({
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                    },
                    Contact: "required",
                    CreditTobeTaken:
                    {
                        required: true,
                        number: true,
                        range: [0, 500]
                    },
                    Address: "required",
                    DesignationId: "required",
                    DepartmentId: "required"

                },
                messages: {
                    Name: "Please enter the  Name",
                    Email: {
                        required: "Please email address is required",
                        email: "Please enter a correct email address"
                    },
                    Contact: "Please enter the  contact",
                    CreditTobeTaken: {
                        required: "Credit is required!",
                        number: "Please enter numeric figure only!",
                        range: "Enter a positive number"
                    },
                    Address: "Address is required!",
                    DesignationId: "Designation is required!",
                    DepartmentId: "Please select department"
                }
            });
        });
    </script>
    
</div>
