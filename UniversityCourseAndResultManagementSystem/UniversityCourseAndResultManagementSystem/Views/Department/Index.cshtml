
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <hr/>
       
        <h2 style="font-size: 30px; color: #5f223b">View All Department</h2>

        <hr />
        <p>
            @*@Html.ActionLink("Save Department", "Save")*@
        </p>
        
        <table class="table table-striped table-bordered table-hover " width="40%" style="background-color: #d3d4d5; text-align: center; ">
            <thead>
                <tr>
                    <th class="alert-info" >Code</th>
                    <th class="alert-info">Name</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Code</td>
                        <td>@dept.Name</td>

                    </tr>
                }
            </tbody>
        </table>

            </div>



    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>


</body>
</html>
